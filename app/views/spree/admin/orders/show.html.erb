<% content_for :page_actions do %>
  <% if @order.completed? %>
    <% if can?(:fire, @order) %>
      <%= event_links(@order, @order_events) %>
    <% end %>
    <% if can?(:resend, @order) %>
      <%= button_link_to Spree.t(:resend, scope: 'admin.order.events', default: Spree.t(:resend)),
            resend_admin_order_url(@order),
            method: :post,
            icon: 'envelope.svg', class: 'btn-secondary' %>
    <% end %>
  <% end %>

  <% if (can? :update, @order) && @order.some_digital? %>
    <%= button_link_to Spree.t('admin.digitals.reset_download_links'),
        reset_digitals_admin_order_url(@order),
        icon: 'hdd.svg' %>
  <% end %>
<% end %>

<% content_for :page_title do %>
  <%= page_header_back_button spree.admin_orders_path %>
  <%= @order.number %>
<% end %>

<div data-hook="admin_order_edit_header">
  <%= render 'spree/admin/shared/error_messages', target: @order %>
</div>


<div class="row">
  <div class="col-12 col-md-8">
    <%= render 'add_line_item' if can?(:update, @order) %>
    <%= render 'summary' %>
  </div>
  <div class="col-4">
    <%= render 'customer' %>
  </div>
</div>
<% if @order.payments.exists? && @order.considered_risky? %>
  <%= render 'spree/admin/orders/risk_analysis', latest_payment: @order.payments.order("created_at DESC").first %>
<% end %>
