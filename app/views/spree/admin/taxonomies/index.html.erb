<% content_for :page_title do %>
  <%= I18n.t('spree.dash.taxonomies.categories') %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon I18n.t('spree.dash.taxonomies.add_new_taxon'), new_object_url, class: "btn-success btn", icon: 'plus-square.svg', id: 'admin_new_taxonomy_link' %>
<% end if can?(:create, Spree::Taxonomy) %>

<% if @taxonomies.any? %>
  <div id="list-taxonomies" data-hook>
    <%= render 'list' %>
  </div>
<% else %>
  <div class="text-center no-objects-found m-5">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::Taxonomy)) %>,
    <%= link_to Spree.t(:add_one), new_object_url if can?(:create, Spree::Taxonomy) %>!
  </div>
<% end %>
