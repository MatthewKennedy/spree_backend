<div class="table-responsive border rounded bg-white">
  <table class="table sortable" id='listing_taxonomies'>
    <thead class="text-muted">
      <tr data-hook="taxonomies_header">
        <th class="no-border handel-head"></th>
        <th><%= Spree.t(:name) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody data-controller="sortable" data-sortable-resource-name-value="taxonomy">
      <% @taxonomies.each do |taxonomy| %>
        <tr id="<%= spree_dom_id taxonomy %>" data-sortable-update-url="<%= spree.admin_taxonomy_path(taxonomy) %>">
          <td class="move-handle">
            <%= render 'spree/admin/shared/drag_handle' %>
          </td>
          <td><%= taxonomy.name %></td>
          <td class="actions">
            <span class="d-flex justify-content-end">
              <%= link_to_edit taxonomy.id, no_text: true if can?(:edit, taxonomy) %>
              <%= link_to_delete taxonomy, no_text: true if can?(:delete, taxonomy) %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
