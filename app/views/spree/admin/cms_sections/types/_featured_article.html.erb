<div class="row">
  <div class="col-12 col-md-4">
    <%= f.field_container :title do %>
      <%= f.text_field :title, class: 'form-control', placeholder: I18n.t('spree.dash.cms.title') %>
      <%= f.label :title, I18n.t('spree.dash.cms.title') %>
    <% end %>

    <%= f.field_container :subtitle do %>
      <%= f.text_field :subtitle, class: 'form-control', placeholder: I18n.t('spree.dash.cms.subtitle') %>
      <%= f.label :subtitle, I18n.t('spree.dash.cms.subtitle') %>
    <% end %>

    <%= f.field_container :button_text do %>
      <%= f.text_field :button_text, class: 'form-control', placeholder: I18n.t('spree.dash.cms.button_text') %>
      <%= f.label :button_text, I18n.t('spree.dash.cms.button_text') %>
    <% end %>

    <%= f.field_container :gutters do %>
      <%= f.select(:gutters, @cms_section.gutters_sizes, {include_blank: false}, class: 'form-select' , data: {controller: 'ts--select'}) %>
      <%= f.label :gutters, I18n.t('spree.dash.cms.gutters') %>
    <% end %>

  </div>
  <div class="col-12 col-md-8">
    <%= f.field_container :rte_content do %>
      <%= f.text_area :rte_content, { data: { controller: 'rte'}, style: "height: 283px;", class: 'form-control', placeholder: I18n.t('spree.dash.cms.content') } %>
      <%= f.label :rte_content, I18n.t('spree.dash.cms.content') %>
    <% end %>
  </div>
  <div class="col-12"><hr></div>
    <div class="col-12 col-md-6">
      <%= f.field_container :linked_resource_type  do %>
        <%= f.select(:linked_resource_type, spree_humanize_dropdown_values('Spree::Cms::Sections::FeaturedArticle',
                                          { const: 'LINKED_RESOURCE_TYPE' }),
                                          {include_blank: false},
                                          class: 'link_switcher form-select',
                                          data: {controller: 'ts--select'},
                                          placeholder: I18n.t('spree.dash.navigation.link_to')) %>
        <%= f.label :linked_resource_type, I18n.t('spree.dash.navigation.link_to') %>
      <% end %>
    </div>
    <div class="col-12 col-md-6">
      <%= render "spree/admin/shared/link_fields", resource: @cms_section, f: f %>
    </div>
</div>
