<% content_for :page_actions do %>
  <% if @product.available? %>
    <%= external_page_preview_link(@product) %>
  <% end %>
<% end %>

<% content_for :page_title do %>
  <%= page_header_back_button spree.admin_products_path %>
  <%= @product.name %>
<% end %>

<%#= render partial: 'spree/admin/shared/product_tabs', locals: {current: :details} %>

<div data-hook="admin_product_form_fields">
  <div class="row">
    <div class="col-12 col-md-8" data-hook="admin_product_form_left">
      <%= render "spree/admin/products/forms/details" %>
      <%= render "spree/admin/products/forms/seo" %>
      <%= render "spree/admin/products/forms/images" %>
      <%= render "spree/admin/products/forms/digitals" %>
      <%= render "spree/admin/products/forms/variants" %>
    </div>

    <div class="col-12 col-md-4" data-hook="admin_product_form_right">
      <%= render "spree/admin/products/forms/overview" %>
      <%= render "spree/admin/products/forms/status" %>
      <%= render "spree/admin/products/forms/pricing" %>
      <%= render "spree/admin/products/forms/tax_and_shipping" %>
      <%= render "spree/admin/products/forms/specifications" %>
      <%= render "spree/admin/products/forms/organization" %>
    </div>
  </div>

  <div data-hook="admin_product_form_meta"></div>
  <div data-hook="admin_product_form_additional_fields"></div>
</div>
