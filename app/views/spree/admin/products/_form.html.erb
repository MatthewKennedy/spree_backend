<div data-hook="admin_product_form_fields">
  <div class="row">
    <div class="col-12 col-md-8" data-hook="admin_product_form_left">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= I18n.t('spree.admin.details') %></h5>
        </div>
        <div class="card-body">
          <%= f.field_container :name, data: { hook: "admin_product_form_name" }, class: ['form-floating'] do %>
            <%= f.text_field :name, class: 'form-control title', placeholder: raw(Spree.t(:name) + required_span_tag), required: true %>
            <%= f.label :name, raw(Spree.t(:name) + required_span_tag) %>
          <% end %>

          <%= f.field_container :slug, data: { hook: "admin_product_form_slug" }, class: ['form-floating'] do %>
            <%= f.text_field :slug, class: 'form-control title', placeholder: raw(Spree.t(:slug) + required_span_tag), required: true %>
            <%= f.label :slug, raw(Spree.t(:slug) + required_span_tag) %>
          <% end %>

          <%= f.field_container :description, data: { hook: "admin_product_form_description" } do %>
            <%= f.label :description, Spree.t(:description) %>
            <%= f.text_area :description, { rows: 15,
                                            class: "form-control",
                                            data: { controller: "#{'rte' if product_wysiwyg_editor_enabled?}" }
                                          } %>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= I18n.t('spree.admin.seo') %></h5>
        </div>

        <div class="card-body">
          <%= f.field_container :meta_title, data: { hook: "admin_product_form_meta_title" }, class: ['form-floating']  do %>
            <%= f.text_field :meta_title, class: 'form-control', placeholder: Spree.t(:meta_title) %>
            <%= f.label :meta_title, Spree.t(:meta_title) %>
          <% end %>

          <%= f.field_container :meta_keywords, data: { hook: "admin_product_form_meta_keywords" }, class: ['form-floating'] do %>
            <%= f.text_field :meta_keywords, class: 'form-control', placeholder: Spree.t(:meta_keywords) %>
            <%= f.label :meta_keywords, Spree.t(:meta_keywords) %>
          <% end %>

          <%= f.field_container :meta_description, data: { hook: "admin_product_form_meta_description" }, class: ['form-floating'] do %>
            <%= f.text_area :meta_description, class: 'form-control', placeholder: Spree.t(:meta_description), style: "height: 100px" %>
            <%= f.label :meta_description, Spree.t(:meta_description) %>
          <% end %>
        </div>
      </div>

    </div>

    <div class="col-12 col-md-4" data-hook="admin_product_form_right">

      <div class="card">
        <div class="card-header d-flex">
          <div class="flex-fill">
            <h5 class="card-title"><%= I18n.t('spree.admin.status') %></h5>
          </div>
          <div>
            <h5 class="card-title">
              <span class="badge bg-success animate__animated" id="productStatus" data-stream-enter-class="animate__pulse"><%= @product.status.capitalize %></span>
            </h5>
          </div>
        </div>
        <div class="card-body">
          <%= f.field_container :status, data: { hook: "new_product_status", controller: "form-validation" }, class: ['form-floating'] do %>
            <% options = [ ['Draft', 'draft' ], ['Active', 'active' ], ['Archived', 'archived' ] ] %>

            <% options.delete('active') if cannot? :activate, @product %>
            <% select_html = { class: 'form-select', data: { controller: 'ts--select', action: 'change->form-validation#validate' } } %>

            <%= f.select :status, options, { include_blank: false, selected: @product.status }, select_html %>
            <%= f.label :status, Spree.t(:status) %>
            <%= submit_tag "Update Product Status", formaction: spree.update_availability_admin_product_path(@product), formmethod: "post", data: { form_validation_target: "submitBtn" } %>
          <% end %>

          <div id="productStatusOptions">
            <%= render partial: 'status' %>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= I18n.t('spree.admin.cost') %></h5>
        </div>
        <div class="card-body">
          <div data-controller="form-validation">
            <%= f.field_container :cost_currency, class: ['form-floating'], data: { hook: "admin_product_form_cost_currency" } do %>
              <%= f.select :cost_currency, currency_options(@product.cost_currency), {}, { class: 'form-select', data: { controller: 'ts--select', action: 'change->form-validation#validate' } } %>
              <%= f.label :cost_currency, Spree.t(:cost_currency) %>
            <% end %>

            <%= submit_tag "Update Product Status", formaction: spree.update_cost_currency_admin_product_path(@product), formmethod: "post", data: { form_validation_target: "submitBtn" } %>
          </div>
          <%= f.field_container :cost_price, class: ['mb-0'], data: { hook: "admin_product_form_cost_price" } do %>

            <div class="input-group">
              <span id="costPriceCurrencySymbol" class="input-group-text"><%= currency_symbol(@product.cost_currency) %></span>
              <%= f.text_field :cost_price, value: number_to_currency(@product.cost_price, unit: ''), class: 'form-control', data: { controller: 'input-formatting',
                                                                                                                                     input_formatting_options_value: { numeral: true,
                                                                                                                                                                       numeralThousandsGroupStyle: 'thousand'
                                                                                                                                                                     }
                                                                                                                                    } %>
              <span id="costPriceCurrencyIso" class="input-group-text"><%= @product.cost_currency %></span>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= I18n.t('spree.admin.tax_and_shipping') %></h5>
        </div>
        <div class="card-body">
          <%= f.field_container :shipping_category, data: { hook: "admin_product_form_shipping_categories" } do %>
            <%= f.label :shipping_category_id, Spree.t(:shipping_category) %>
            <%= f.collection_select(:shipping_category_id, @shipping_categories, :id, :name, {}, { data: {controller: 'ts--select'} }) %>
          <% end %>

          <%= f.field_container :tax_category, data: { hook: "admin_product_form_tax_category" } do %>
            <%= f.label :tax_category_id, Spree.t(:tax_category) %>
            <%= f.collection_select(:tax_category_id, @tax_categories, :id, :name, { include_blank: Spree.t('match_choices.none') }, { data: {controller: 'ts--select'} }) %>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= I18n.t('spree.admin.specifications') %></h5>
        </div>
        <div class="card-body">
          <% if @product.has_variants? %>
            <div data-hook="admin_product_form_multiple_variants" class="card bg-light mb-3">
              <div class="card-body">
              <h5 class="card-title"><%= f.label :skus, Spree.t(:sku).pluralize %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= Spree.t(:info_product_has_multiple_skus, count: @product.variants.size) %> </h6>
                  <ul class="list-unstyled">
                    <% @product.variants.first(5).each do |variant| %>
                      <li><%= variant.sku %></li>
                    <% end %>
                  </ul>
                  <% if @product.variants.size > 5 %>
                    <em>
                      <%= Spree.t(:info_number_of_skus_not_shown, count: @product.variants.size - 5) %>
                    </em>
                  <% end %>
                <div class="info-actions">
                  <% if can?(:admin, Spree::Variant) %>
                    <%= link_to_with_icon 'grid-3x3-gap.svg', Spree.t(:manage_variants), spree.admin_product_variants_url(@product), class: "btn btn-secondary" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% else %>
            <div id="shipping_specs" class="row">
              <div class="col-12 col-md-6">
                <%= f.field_container :weight, data: { hook: "admin_product_form_weight" }, class: ['form-floating'] do %>
                  <%= f.text_field :weight, value: number_with_precision(@product.weight, precision: 2), size: 4, class: 'form-control', placeholder: Spree.t(:weight) %>
                  <%= f.label :weight, Spree.t(:weight) %>
                <% end %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.field_container :height, data: { hook: "admin_product_form_height" }, class: ['form-floating'] do %>
                  <%= f.text_field :height, value: number_with_precision(@product.height, precision: 2), size: 4, class: 'form-control', placeholder: Spree.t(:height) %>
                  <%= f.label :height, Spree.t(:height) %>
                <% end %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.field_container :width, data: { hook: "admin_product_form_width" }, class: ['form-floating'] do %>
                  <%= f.text_field :width, value: number_with_precision(@product.width, precision: 2), size: 4, class: 'form-control', placeholder: Spree.t(:width) %>
                  <%= f.label :width, Spree.t(:width) %>
                <% end %>
              </div>

              <div class="col-12 col-md-6">
                <%= f.field_container :depth, data: { hook: "admin_product_form_depth" }, class: ['form-floating'] do %>
                  <%= f.text_field :depth, value: number_with_precision(@product.depth, precision: 2), size: 4, class: 'form-control', placeholder: Spree.t(:depth) %>
                  <%= f.label :depth, Spree.t(:depth) %>
                <% end %>
              </div>
            </div>
          <% end %>

          <%= f.field_container :master_sku, data: { hook: "admin_product_form_sku" }, class: ['form-floating']  do %>
            <%= f.text_field :sku, size: 16, class: 'form-control', placeholder: Spree.t(:master_sku) %>
            <%= f.label :master_sku, Spree.t(:master_sku) %>
          <% end %>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h5 class="card-title"><%= I18n.t('spree.admin.organization') %></h5>
        </div>
        <div class="card-body">
          <%= f.field_container :taxons, data: { hook: "admin_product_form_taxons" } do %>
            <%= f.label :taxon_ids, Spree.t(:taxons) %>

            <% if can? :modify, Spree::Classification %>
              <%= f.select :taxon_ids, options_from_collection_for_select(@product.taxons, :id, :pretty_name, @product.taxon_ids),
                                        { include_hidden: true },
                                          multiple: true,
                                          data: { controller: 'ts--search',
                                                  ts__search_uri_value: '/api/v2/platform/taxons',
                                                  ts__search_val_value: 'id',
                                                  ts__search_txt_value: 'pretty_name',
                                                  ts__search_fields_value: ['pretty_name'],
                                                  ts__search_ransack_value: ['pretty_name_i_cont']
                                                 } %>

            <% elsif @product.taxons.any? %>
              <ul class="text_list">
                <% @product.taxons.each do |taxon| %>
                  <li><%= taxon.name %></li>
                <% end %>
              </ul>
            <% else %>
              <div class="alert alert-info">
                <%= Spree.t(:no_resource_found, resource: :taxons) %>
              </div>
            <% end %>
          <% end %>

          <%= f.field_container :option_types, data: { hook: "admin_product_form_option_types" } do %>
            <%= f.label :option_type_ids, Spree.t(:option_types) %>

            <% if can? :modify, Spree::ProductOptionType %>
            <%= f.select :option_type_ids, options_from_collection_for_select(@product.option_types, :id, :name, @product.option_type_ids),
                                      { include_hidden: true },
                                        multiple: true,
                                        data: { controller: 'ts--search',
                                                ts__search_uri_value: '/api/v2/platform/option_types'
                                               } %>

            <% elsif @product.option_types.any? %>
              <ul class="text_list">
                <% @product.option_types.each do |type| %>
                  <li><%= type.presentation %> (<%= type.name %>)</li>
                <% end %>
              </ul>
            <% else %>
              <div class="alert alert-info"><%= Spree.t(:no_resource_found, resource: :option_types) %></div>
            <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>

  <% if @stores.count > 1 %>
    <%= f.field_container :stores, data: { hook: "admin_product_form_stores" } do %>
      <%= f.label :product_stores, Spree.t(:stores) %>
      <%= collection_select(:product, :store_ids, @stores, :id, :unique_name, {}, { multiple: true, data: { controller: 'ts--select' } }) %>
    <% end %>
  <% end %>

  <div data-hook="admin_product_form_meta"></div>
  <div data-hook="admin_product_form_additional_fields"></div>
</div>
