<div data-hook="admin_product_form_fields">
  <div class="row">
    <div class="col-12 col-md-8" data-hook="admin_product_form_left">
      <%= turbo_frame_tag :product_details do %>
        <%= form_with model: [:admin, @product], method: :patch, data: {controller: "form-state", turbo_frame: :product_details}, builder: Spree::Dash::BootstrapBuilder do |f| %>
          <div class="card">
            <div class="card-header d-flex">
              <div class="flex-fill">
                <h5 class="card-title"><%= I18n.t('spree.dash.details') %></h5>
              </div>

              <div>
                <%= render partial: 'spree/admin/shared/submit_button' %>
              </div>
            </div>
            <div class="card-body">
              <%= f.field_container :name, data: { hook: "admin_product_form_name" } do %>
                <%= f.text_field :name, required: true %>
                <%= f.label :name, raw(Spree.t(:name) + required_span_tag) %>
              <% end %>

              <%= f.field_container :slug, data: { hook: "admin_product_form_slug" } do %>
                <%= f.text_field :slug, required: true %>
                <%= f.label :slug, raw(Spree.t(:slug) + required_span_tag) %>
              <% end %>

              <%= f.field_container :description, data: { hook: "admin_product_form_description" } do %>
                <%= f.label :description, Spree.t(:description) %>
                <%= f.text_area :description, {rows: 15, data: { controller: "#{'rte' if product_wysiwyg_editor_enabled?}", form_state_target: "watch" }} %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <%= turbo_frame_tag :product_seo do %>
        <%= form_with model: [:admin, @product], method: :patch, data: {controller: "form-state", turbo_frame: :product_seo}, builder: Spree::Dash::BootstrapBuilder do |f| %>
          <div class="card">
            <div class="card-header d-flex">
              <div class="flex-fill">
                <h5 class="card-title"><%= I18n.t('spree.dash.seo') %></h5>
              </div>

              <div>
                <%= render partial: 'spree/admin/shared/submit_button' %>
              </div>
            </div>

            <div class="card-body">
              <%= f.field_container :meta_title, data: { hook: "admin_product_form_meta_title" }  do %>
                <%= f.text_field :meta_title %>
                <%= f.label :meta_title, Spree.t(:meta_title) %>
              <% end %>

              <%= f.field_container :meta_keywords, data: { hook: "admin_product_form_meta_keywords" } do %>
                <%= f.text_field :meta_keywords %>
                <%= f.label :meta_keywords, Spree.t(:meta_keywords) %>
              <% end %>

              <%= f.field_container :meta_description, data: { hook: "admin_product_form_meta_description" } do %>
                <%= f.text_area :meta_description, style: "height: 100px" %>
                <%= f.label :meta_description, Spree.t(:meta_description) %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

    </div>

    <div class="col-12 col-md-4" data-hook="admin_product_form_right">
      <%= turbo_frame_tag :product_status do %>
        <%= form_with model: [:admin, @product], method: :patch, data: {controller: "form-state", turbo_frame: :prouct_status}, builder: Spree::Dash::BootstrapBuilder do |f| %>
          <div class="card">
            <div class="card-header d-flex">
              <div class="flex-fill">
                <h5 class="card-title"><%= I18n.t('spree.dash.status') %></h5>
                <span class="badge bg-success animate__animated" id="productStatus" data-stream-enter-class="animate__pulse"><%= @product.status.capitalize %></span>
              </div>
              <div>
                <%= render partial: 'spree/admin/shared/submit_button' %>
              </div>
            </div>
            <div class="card-body">
              <%= f.field_container :status, data: { hook: "new_product_status", controller: "form-validation" } do %>
                <% options = [ ['Draft', 'draft' ], ['Active', 'active' ], ['Archived', 'archived' ] ] %>

                <% options.delete('active') if cannot? :activate, @product %>
                <% select_html = { data: { controller: 'ts--select', action: 'change->form-validation#validate' } } %>

                <%= f.select :status, options, { include_blank: false, selected: @product.status }, select_html %>
                <%= f.label :status, Spree.t(:status) %>
                <%= submit_tag "Update Product Status", formaction: spree.update_availability_admin_product_path(@product), formmethod: "post", data: { form_validation_target: "submitBtn" } %>
              <% end %>

              <div id="productStatusOptions">
                <%= render partial: 'status' %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <%= turbo_frame_tag :product_cost_price do %>
        <%= form_with model: [:admin, @product], method: :patch, data: {controller: "form-state", turbo_frame: :product_cost_price}, builder: Spree::Dash::BootstrapBuilder do |f| %>
          <div class="card">
            <div class="card-header d-flex">
              <div class="flex-fill">
                <h5 class="card-title"><%= I18n.t('spree.dash.cost') %></h5>
              </div>
              <div>
                <%= render partial: 'spree/admin/shared/submit_button' %>
              </div>
            </div>
            <div class="card-body">
              <div data-controller="form-validation">
                <%= f.field_container :cost_currency, data: { hook: "admin_product_form_cost_currency" } do %>
                  <%= f.select :cost_currency, currency_options(@product.cost_currency), {}, {data: { controller: 'ts--select', action: 'change->form-validation#validate'}} %>
                  <%= f.label :cost_currency, Spree.t(:cost_currency) %>
                <% end %>

                <%= submit_tag "Update Product Status", formaction: spree.update_cost_currency_admin_product_path(@product), formmethod: "post", data: { form_validation_target: "submitBtn" } %>
              </div>
              <%= f.field_container :cost_price, class: ['mb-0'], data: { hook: "admin_product_form_cost_price" } do %>
                <div class="input-group">
                  <span id="costPriceCurrencySymbol" class="input-group-text"><%= currency_symbol(@product.cost_currency) %></span>
                  <div class="form-floating">
                    <%= f.text_field :cost_price, value: number_to_currency(@product.cost_price, unit: ''), data: { controller: 'input-formatting', form_state_target: "watch", input_formatting_options_value: { numeral: true, numeralThousandsGroupStyle: 'thousand'}} %>
                    <%= f.label :cost_price, Spree.t(:cost_price) %>
                  </div>
                  <span id="costPriceCurrencyIso" class="input-group-text"><%= @product.cost_currency %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <%= turbo_frame_tag :product_tax_and_shipping do %>
        <%= form_with model: [:admin, @product], method: :patch, data: {controller: "form-state", turbo_frame: :product_tax_and_shipping }, builder: Spree::Dash::BootstrapBuilder do |f| %>
          <div class="card">
            <div class="card-header d-flex">
              <div class="flex-fill">
                <h5 class="card-title"><%= I18n.t('spree.dash.tax_and_shipping') %></h5>
              </div>
              <div>
                 <%= render partial: 'spree/admin/shared/submit_button' %>
              </div>
            </div>
            <div class="card-body">
              <%= f.field_container :shipping_category, data: { hook: "admin_product_form_shipping_categories" } do %>
                <%= f.collection_select(:shipping_category_id, @shipping_categories, :id, :name, {}) %>
                <%= f.label :shipping_category_id, Spree.t(:shipping_category) %>
              <% end %>

              <%= f.field_container :tax_category, data: { hook: "admin_product_form_tax_category" } do %>
                <%= f.collection_select(:tax_category_id, @tax_categories, :id, :name, { include_blank: I18n.t('spree.dash.match_choices.none') }) %>
                <%= f.label :tax_category_id, Spree.t(:tax_category) %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <%= turbo_frame_tag :product_specifications do %>
        <%= form_with model: [:admin, @product], method: :patch, data: {controller: "form-state", turbo_frame: :product_specifications}, builder: Spree::Dash::BootstrapBuilder do |f| %>
          <div class="card">
            <div class="card-header d-flex">
              <div class="flex-fill">
                <h5 class="card-title"><%= I18n.t('spree.dash.specifications') %></h5>
              </div>
              <div>
                 <%= render partial: 'spree/admin/shared/submit_button' %>
              </div>
            </div>
            <div class="card-body">
              <% if @product.has_variants? %>
                <div data-hook="admin_product_form_multiple_variants" class="card bg-light mb-3">
                  <div class="card-body">
                  <h5 class="card-title"><%= f.label :skus, Spree.t(:sku).pluralize %></h5>
                      <h6 class="card-subtitle mb-2 text-muted"><%= Spree.t(:info_product_has_multiple_skus, count: @product.variants.size) %> </h6>
                      <ul class="list-unstyled">
                        <% @product.variants.first(5).each do |variant| %>
                          <li><%= variant.sku %></li>
                        <% end %>
                      </ul>
                      <% if @product.variants.size > 5 %>
                        <em>
                          <%= Spree.t(:info_number_of_skus_not_shown, count: @product.variants.size - 5) %>
                        </em>
                      <% end %>
                    <div class="info-actions">
                      <% if can?(:admin, Spree::Variant) %>
                        <%= link_to_with_icon(Spree.t(:manage_variants), spree.admin_product_variants_url(@product), class: "btn btn-light", icon: 'grid-3x3-gap.svg') %>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% else %>
                <div id="shipping_specs" class="row">
                  <div class="col-12 col-md-6">
                    <%= f.field_container :weight, data: { hook: "admin_product_form_weight" } do %>
                      <%= f.text_field :weight, value: number_with_precision(@product.weight, precision: 2) %>
                      <%= f.label :weight, Spree.t(:weight) %>
                    <% end %>
                  </div>

                  <div class="col-12 col-md-6">
                    <%= f.field_container :height, data: { hook: "admin_product_form_height" } do %>
                      <%= f.text_field :height, value: number_with_precision(@product.height, precision: 2) %>
                      <%= f.label :height, Spree.t(:height) %>
                    <% end %>
                  </div>

                  <div class="col-12 col-md-6">
                    <%= f.field_container :width, data: { hook: "admin_product_form_width" } do %>
                      <%= f.text_field :width, value: number_with_precision(@product.width, precision: 2) %>
                      <%= f.label :width, Spree.t(:width) %>
                    <% end %>
                  </div>

                  <div class="col-12 col-md-6">
                    <%= f.field_container :depth, data: { hook: "admin_product_form_depth" } do %>
                      <%= f.text_field :depth, value: number_with_precision(@product.depth, precision: 2) %>
                      <%= f.label :depth, Spree.t(:depth) %>
                    <% end %>
                  </div>
                </div>
              <% end %>

              <%= f.field_container :master_sku, data: { hook: "admin_product_form_sku" }  do %>
                <%= f.text_field :sku %>
                <%= f.label :master_sku, Spree.t(:master_sku) %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>

      <%= turbo_frame_tag :product_organization do %>
        <%= form_with model: [:admin, @product], method: :patch, data: {controller: "form-state", turbo_frame: :product_organization}, builder: Spree::Dash::BootstrapBuilder do |f| %>
          <div class="card">
            <div class="card-header d-flex">
              <div class="flex-fill">
                <h5 class="card-title"><%= I18n.t('spree.dash.organization') %></h5>
              </div>
              <div>
                 <%= render partial: 'spree/admin/shared/submit_button' %>
              </div>
            </div>
            <div class="card-body">
              <%= f.field_container :taxons, data: { hook: "admin_product_form_taxons" } do %>
                <% if can? :modify, Spree::Classification %>
                  <%= f.select :taxon_ids, options_from_collection_for_select(@product.taxons, :id, :pretty_name, @product.taxon_ids),
                                            { include_hidden: true },
                                              multiple: true,
                                              data: { controller: 'ts--search',
                                                      ts__search_uri_value: '/api/v2/platform/taxons',
                                                      ts__search_val_value: 'id',
                                                      ts__search_txt_value: 'pretty_name',
                                                      ts__search_fields_value: ['pretty_name'],
                                                      ts__search_ransack_value: ['pretty_name_i_cont'],
                                                      form_state_target: "watch"
                                                     } %>
                  <%= f.label :taxon_ids, Spree.t(:taxons) %>

                <% elsif @product.taxons.any? %>
                  <ul class="text_list">
                    <% @product.taxons.each do |taxon| %>
                      <li><%= taxon.name %></li>
                    <% end %>
                  </ul>
                <% else %>
                  <div class="alert alert-info">
                    <%= Spree.t(:no_resource_found, resource: :taxons) %>
                  </div>
                <% end %>
              <% end %>

              <%= f.field_container :option_types, data: { hook: "admin_product_form_option_types" } do %>
                <% if can? :modify, Spree::ProductOptionType %>
                  <%= f.select :option_type_ids, options_from_collection_for_select(@product.option_types, :id, :name, @product.option_type_ids),
                                            { include_hidden: true },
                                              multiple: true,
                                              data: { controller: 'ts--search',
                                                      ts__search_uri_value: '/api/v2/platform/option_types',
                                                      form_state_target: "watch"
                                                     } %>
                  <%= f.label :option_type_ids, Spree.t(:option_types) %>
                <% elsif @product.option_types.any? %>
                  <ul class="text_list">
                    <% @product.option_types.each do |type| %>
                      <li><%= type.presentation %> (<%= type.name %>)</li>
                    <% end %>
                  </ul>
                <% else %>
                  <div class="alert alert-info"><%= Spree.t(:no_resource_found, resource: :option_types) %></div>
                <% end %>
              <% end %>

              <% if @stores.count > 1 %>
                <%= f.field_container :stores, data: { hook: "admin_product_form_stores" } do %>
                  <%= f.collection_select(:store_ids, @stores, :id, :unique_name, {}, {multiple: true}) %>
                  <%= f.label :product_stores, Spree.t(:stores) %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div data-hook="admin_product_form_meta"></div>
  <div data-hook="admin_product_form_additional_fields"></div>
</div>
