<% content_for :page_title do %>
  <%= link_to I18n.t('spree.dash.taxonomies.categories'), spree.admin_taxonomies_url %> /
  <%= link_to @taxonomy.root.name, spree.edit_admin_taxonomy_url(@taxonomy) %>
  <% unless @taxon.root? %>
   / <%= @taxon.name %>
   <% end %>
<% end %>

<% content_for :page_actions do %>
  <%= external_page_preview_link(@taxon) %>
<% end %>

<%# Because otherwise the form would attempt to use to_param of @taxon %>
<% form_url = spree.admin_taxonomy_taxon_path(@taxonomy.id, @taxon.id) %>

<%= form_for [:admin, @taxonomy, @taxon], method: :put, url: form_url, html: { multipart: true } do |f| %>
  <%= render 'form', f: f %>

  <div class="form-actions" data-hook="buttons">
    <%= button I18n.t('spree.dash.actions.update'), 'save.svg' %>
    <span class="or"><%= Spree.t(:or) %></span>
    <%= link_to_with_icon I18n.t('spree.dash.actions.cancel'), spree.edit_admin_taxonomy_url(@taxonomy), icon: "x-lg.svg" %>
  </div>
<% end %>
