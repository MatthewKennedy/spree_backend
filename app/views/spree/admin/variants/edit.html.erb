<% content_for :page_title do %>
  <%= page_header_back_button spree.edit_admin_product_path(@product) %>
  <%= @product.name %>
<% end %>

<%= form_with model: [:admin, @product, @variant], builder: Spree::Dash::BootstrapBuilder do |f| %>
  <div class="card mb-0">
    <div class="card-header">
      <h5 class="mb-0"><%= @variant.sku || @variant.options_text %></h5>
    </div>
    <div class="card-body" data-hook="admin_variant_edit_form">
      <%= render partial: 'form', locals: { f: f } %>
    </div>
    <div class="card-body">
      <%= render partial: 'spree/admin/shared/edit_resource_links' %>
    </div>
  </div>
<% end %>

<%= turbo_frame_tag :variant_digitals do %>
  <%= form_with modle: [admin: @product], scope: :digital, url: admin_product_digitals_path(@product), builder: Spree::Dash::BootstrapBuilder, data: {turbo_frame: :variant_digitals} do |f| %>
    <div class="col-12">
      <%= render 'spree/admin/digitals/form', f: f, variant: @variant %>
    </div>
  <% end %>
<% end if can?(:admin, Spree::Digital) && !@product.deleted? %>
