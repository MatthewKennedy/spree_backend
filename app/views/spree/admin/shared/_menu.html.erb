<% main_menu_controller_names = [:addresses, :dashboard, :orders, :products, :return_authorizations, :returns, :customer_returns, :properties, :prototypes, :taxonomies, :taxons, :stock_transfers, :stock_locations, :reports, :promotions, :promotion_categories, :users, :menus, :cms_pages, :option_types ] %>
<% settings_controller_names = [:stores, :states, :roles, :tax_categories, :tax_rates, :zones, :countries, :shipping_methods, :shipping_categories, :store_credit_categories, :refund_reasons, :reimbursements, :reimbursement_types, :return_authorization_reasons, :rolses, :oauth_applications, :payment_methods, :webhooks_subscribers ] %>

<aside class="col-12 col-lg-3 col-xl-2 sidebar position-fixed d-flex flex-column px-0 overflow-hidden offcanvas-lg offcanvas-start"
       id="main-sidebar"
       data-hook="admin_tabs">

  <div id="navHeader" class="d-flex p-2 position-absolute top-0 w-100 align-items-center">
    <div class="col">
      <%= svg_icon name: "spree-logo.svg", width: '100', height: '35' %>
    </div>

    <button type="button"
            data-bs-target="#searchModal"
            class="btn btn-light col-auto d-none d-lg-flex"
            aria-label="Search">

      <%= svg_icon name: "search.svg", width: '18', height: '18', classes: 'p-0 m-0' %>
    </button>

    <button id="sidebar-close"
            class="btn btn-light col-auto d-lg-none"
            type="button"
            aria-label="Toggle navigation"
            data-bs-dismiss="offcanvas"
            data-bs-target="aside#main-sidebar"
            aria-label="Close">

      <%= svg_icon name: "x-lg.svg", width: '16', height: '16', classes: 'p-0 m-0' %>
    </button>
  </div>

  <div id="carouselMainNavigation" class="carousel slide overflow-scroll" data-bs-ride="false">
    <div class="carousel-inner">
      <div class="carousel-item">
        <nav class="pb-3 pt-lg-3 px-1">
          <%= render partial: 'spree/admin/shared/main_menu/store_nav' %>
        </nav>
      </div>
      <div class="carousel-item <%= "active" if active_panel?(settings_controller_names) %>">
        <nav class="pb-3 pt-lg-3 px-1">
          <%= render partial: 'spree/admin/shared/main_menu/settings_nav' %>
        </nav>
      </div>
      <% if try_spree_current_user %>
        <div class="carousel-item">
          <nav class="pb-3 pt-lg-3 px-1">
            <%= render partial: 'spree/admin/shared/main_menu/account_nav' %>
          </nav>
        </div>
      <% end %>
      <div class="carousel-item <%= "active" if active_panel?(main_menu_controller_names) %>">
        <nav class="pb-3 pt-lg-3 px-1">
          <%= render partial: 'spree/admin/shared/main_menu/main_nav' %>
        </nav>
      </div>
    </div>
  </div>

  <div id="navFooter" class="d-flex bottom-0 position-absolute w-100 bg-light justify-content-center bg-light btn-group rounded-0">
    <button type="button" data-bs-target="#carouselMainNavigation" data-bs-slide-to="0" class="btn btn-light p-2rounded-0 " aria-current="true" aria-label="Store Switch">
      <%= svg_icon name: "shuffle.svg", width: '16', height: '16', classes: 'p-0 m-0' %>
    </button>
    <button type="button" data-bs-target="#carouselMainNavigation" data-bs-slide-to="1" class="btn btn-light p-2 rounded-0 <%= "active" if active_panel?(settings_controller_names) %>" aria-current="true" aria-label="Settings">
      <%= svg_icon name: "gear.svg", width: '16', height: '16', classes: 'p-0 m-0' %>
    </button>
    <% if try_spree_current_user %>
      <button type="button" data-bs-target="#carouselMainNavigation" data-bs-slide-to="2" class="btn btn-light p-2 rounded-0" aria-label="Account">
        <%= svg_icon name: "person-square.svg", width: '16', height: '16', classes: 'p-0 m-0' %>
      </button>
    <% end %>
    <button type="button" data-bs-target="#carouselMainNavigation" data-bs-slide-to="3" class="btn btn-light p-2 rounded-0 <%= "active" if active_panel?(main_menu_controller_names) %>" aria-label="Main Menu">
      <%= svg_icon name: "list.svg", width: '16', height: '16', classes: 'p-0 m-0' %>
    </button>
  </div>
</aside>
