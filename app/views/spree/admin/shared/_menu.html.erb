<aside class="col-12 col-lg-3 col-xl-2 sidebar position-fixed d-flex flex-column px-0 overflow-hidden offcanvas-lg offcanvas-start"
       id="main-sidebar"
       data-hook="admin_tabs"
       data-controller="bs-instance"
       data-action="resize@window->bs-instance#manipulate"
       data-bs-instance-class-value='Offcanvas'
       data-bs-instance-method-value='hide'>

  <div id="navHeader" class="d-flex p-2 position-absolute top-0 w-100 align-items-center">
    <div class="col">
      <%= inline_svg_tag "spree-logo.svg", size: '100px * 35px' %>
    </div>

    <%= link_to_with_icon(I18n.t('spree.dash.search'), spree.new_admin_search_path, no_text: true, data: { turbo_frame: :modal }, class: 'btn btn-light col-auto d-none d-lg-flex', icon: 'search.svg') %>

    <button id="sidebar-close"
            class="btn btn-light col-auto d-lg-none"
            type="button"
            aria-label="Toggle navigation"
            data-bs-dismiss="offcanvas"
            data-bs-target="aside#main-sidebar"
            aria-label="Close">

      <%= inline_svg_tag "x-lg.svg", size: '16px * 16px', class: 'p-0 m-0' %>
    </button>
  </div>

  <div id="carouselMainNavigation" class="carousel slide overflow-scroll" data-bs-ride="false">
    <div class="carousel-inner">
      <div class="carousel-item <%= "active" if store_switcher_menu_active? %>">
        <nav class="pb-3 pt-lg-3 px-1">
          <%= render partial: 'spree/admin/shared/main_menu/store_nav' %>
        </nav>
      </div>
      <div class="carousel-item <%= "active" if settings_menu_active? %>">
        <nav class="pb-3 pt-lg-3 px-1">
          <%= render partial: 'spree/admin/shared/main_menu/settings_nav' %>
        </nav>
      </div>
      <% if try_spree_current_user %>
        <div class="carousel-item <%= "active" if accounts_menu_active? %>">
          <nav class="pb-3 pt-lg-3 px-1">
            <%= render partial: 'spree/admin/shared/main_menu/account_nav' %>
          </nav>
        </div>
      <% end %>
      <div class="carousel-item <%= "active" if main_menu_active? %>">
        <nav class="pb-3 pt-lg-3 px-1">
          <%= render partial: 'spree/admin/shared/main_menu/main_nav' %>
        </nav>
      </div>
    </div>
  </div>

  <div id="navFooter" class="d-flex bottom-0 position-absolute w-100 bg-light justify-content-center bg-light btn-group rounded-0">
    <button type="button" data-bs-target="#carouselMainNavigation" data-bs-slide-to="0" class="btn btn-light p-2rounded-0 <%= "active" if store_switcher_menu_active? %>" aria-current="true" aria-label="Store Switch">
      <%= inline_svg_tag "shuffle.svg", size: '16px * 16px', class: 'p-0 m-0' %>
    </button>
    <button type="button" data-bs-target="#carouselMainNavigation" data-bs-slide-to="1" class="btn btn-light p-2 rounded-0 <%= "active" if settings_menu_active? %>" aria-current="true" aria-label="Settings">
      <%= inline_svg_tag "gear.svg", size: '16px * 16px', class: 'p-0 m-0' %>
    </button>
    <% if try_spree_current_user %>
      <button type="button" data-bs-target="#carouselMainNavigation" data-bs-slide-to="2" class="btn btn-light p-2 rounded-0 <%= "active" if accounts_menu_active? %>" aria-label="Account">
        <%= inline_svg_tag "person-square.svg", size: '16px * 16px', class: 'p-0 m-0' %>
      </button>
    <% end %>
    <button type="button" data-bs-target="#carouselMainNavigation" data-bs-slide-to="3" class="btn btn-light p-2 rounded-0 <%= "active" if main_menu_active? %>" aria-label="Main Menu">
      <%= inline_svg_tag "list.svg", size: '16px * 16px', class: 'p-0 m-0' %>
    </button>
  </div>
</aside>
