<% date_time ||= false %>
<% value ||= nil %>
<% placeholder ||= Spree.t(:starting_from) %>
<% f ||= nil %>

<div id="<%= "datePickerFrom_#{from_field.to_s}" %>" class="input-group" data-controller="datepicker"
                                                                         data-datepicker-from="true"
                                                                         data-wrap="true"
                                                                         data-max-date="<%= data_max_date %>"
                                                                         <% if date_time %>
                                                                           data-enable-time="true"
                                                                         <% end %>
                                                                         data-target-pair-id="<%= "datePickerTo_#{to_field.to_s}" %>">
  <% if date_time %>
    <% if f %>
      <%= f.datetime_field from_field.to_sym, class: 'js-filterable',
                                              value: value,
                                              placeholder: placeholder,
                                              data: { input:'' } %>
    <% else %>
      <%= datetime_field_tag from_field.to_s, class: 'js-filterable',
                                              placeholder: placeholder,
                                              value: value,
                                              data: { input:'' } %>
    <% end %>
  <% else %>
    <% if f %>
    <%= f.text_field from_field.to_sym, class: 'js-filterable',
                                        value: value,
                                        placeholder: placeholder,
                                        data: { input:'' } %>
    <% else %>
      <%= text_field_tag from_field.to_s, value, class: "js-filterable",
                                                 autocomplete: false,
                                                 placeholder: placeholder,
                                                 data: { input:'' } %>
    <% end %>
  <% end %>

  <%= render partial: 'spree/admin/shared/cal_close' %>
</div>
