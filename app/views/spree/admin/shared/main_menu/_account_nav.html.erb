<% if spree.respond_to? :root_path %>
  <ul class="nav nav-sidebar" id="sidebarDashboard">
    <%= tab I18n.t('spree.dash.home'), url: spree.root_path, match_path: nil, icon: 'shop.svg' %>
  </ul>
<% end %>

<% if admin_logout_link %>
  <ul class="nav nav-sidebar" id="logout">
    <%= tab Spree.t(:logout), url: admin_logout_link, match_path: nil, icon: 'box-arrow-right.svg' %>
  </ul>
<% end %>
