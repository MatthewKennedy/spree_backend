<% date_time ||= false  %>
<% value ||= nil  %>
<% placeholder ||= Spree.t(:select_a_date) %>

<div class="input-group" data-controller="datepicker"
                         data-wrap="true"
                         <% if date_time %>
                           data-enable-time="true"
                         <% end %>>
  <% if date_time %>
    <%= f.datetime_field field.to_sym, class: 'js-filterable',
                                       placeholder: placeholder,
                                       value: value,
                                       data: { input:'' } %>
  <% else %>
    <%= f.text_field field.to_sym, class: "js-filterable",
                                   placeholder: placeholder,
                                   value: value,
                                   data: { input:'' } %>
  <% end %>

  <%= render partial: 'spree/admin/shared/cal_close' %>
</div>
