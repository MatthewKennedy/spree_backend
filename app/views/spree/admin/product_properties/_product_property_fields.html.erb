<tr id="<%= dom_id(f.object) %>"
    class="animate__animated animate__faster"
    data-sortable-update-url="<%= spree.admin_product_product_property_path(@product, f.object) %>"
    data-stream-exit-class="animate__fadeOut">
  <% if can?(:edit, f.object) %>
    <td class="move-handle">
      <div class="move-handle handle d-flex justify-content-center align-items-center">
        <%= svg_icon name: "grip-vertical.svg", width: '22', height: '22' %>
      </div>
    </td>
  <% else %>
    <td style="opacity:0.2;">
      <%= svg_icon name: "grip-vertical.svg", width: '18', height: '18' %>
    </td>
  <% end %>

  <td>
    <%= f.text_field :property_name, class: 'form-control', required: true %>
  </td>

  <td>
    <%= f.text_field :value, class: 'form-control', required: true %>
  </td>

  <td class="text-center">
    <%= f.check_box :show_property, class: 'form-check-input' %>
  </td>

  <td class="actions">
    <span class="d-flex justify-content-end">
      <% if can?(:destroy, f.object) %>
        <%= link_to_with_icon 'delete.svg', I18n.t('spree.dash.delete'), spree.admin_product_product_property_path(@product, f.object), class: 'delete-line-item btn btn-danger btn-sm', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } , title: I18n.t('spree.dash.delete'), no_text: true %>
      <% else %>
      <span class="btn btn-danger btn-sm icon-link disabled" style="opacity:0.2;">
        <%= svg_icon name: "delete.svg", width: '18', height: '18' %>
      </span>
      <% end %>
    </span>
  </td>
</tr>
