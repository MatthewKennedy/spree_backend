<% content_for :page_title do %>
  <%= link_to I18n.t('spree.dash.cms.all_pages'), spree.admin_cms_pages_path %> / <%= @cms_page.title %>
<% end %>

<% content_for :page_actions do %>
  <%= external_page_preview_link(@cms_page, { name: I18n.t('spree.dash.cms.page') }) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @cms_page } %>
<%= form_for [:admin, @cms_page], as: :cms_page, url: spree.admin_cms_page_path do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
<% end %>

<% if @cms_page.sections? %>
  <%= render partial: 'live_preview_area' %>
<% end %>
