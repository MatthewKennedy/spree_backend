<%= render partial: 'spree/admin/shared/product_tabs', locals: { current: :prices } %>

<% content_for :page_actions do %>
  <%= yield :page_actions %>
  <%= external_page_preview_link(@product) %>
<% end %>

<form>
  <input class="form-control" placeholder="<%= I18n.t('spree.dash.variant_prices_search_placeholder') %>" type="text" id="variant-price-search">
</form>

<%= form_tag nil, { class: 'form-horizontal' } do %>
  <div class="my-3">
    <%= render 'variant_prices', variant: @product.master %>
  </div>
  <div class="form-actions" data-hook="buttons">
    <%= button I18n.t('spree.dash.actions.update'), 'save.svg' %>
    <span class="or"><%= Spree.t(:or) %></span>
    <%= button_link_to I18n.t('spree.dash.actions.cancel'), admin_product_path(@product), icon: 'delete.svg' %>
  </div>
<% end %>
