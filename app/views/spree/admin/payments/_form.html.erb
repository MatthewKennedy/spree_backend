<div data-hook="admin_payment_form_fields">
  <div class="form-group">
    <%= f.label :amount, Spree.t(:amount) %>
    <%= f.text_field :amount, value: @order.display_outstanding_balance.money, class: 'form-control' %>
  </div>
  <div class="form-group">
    <div class="payment-method-settings">
      <div class="payment-methods my-3" id="payment_method_<%= @payment_method.id %>">
        <% if @payment_method.source_required? %>
          <%= render partial: "spree/admin/payments/source_forms/#{@payment_method.method_type}",
                     locals: {
                       payment_method: @payment_method,
                       previous_cards: @payment_method.reusable_sources(@order)
                     } %>
        <% end %>
        <%= hidden_field_tag 'payment[payment_method_id]', @payment_method.id  %>
      </div>
    </div>
  </div>
</div>
