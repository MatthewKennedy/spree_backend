<div class="card" data-hook="admin_oauth_application_form_fields">
  <div class="card-header d-flex">
    <h5 class="card-title"><%= I18n.t('spree.dash.details') %></h5>
  </div>

  <div class="card-body">
    <%= f.field_container :name, 'data-hook' => "oauth_application_name" do %>
      <%= f.text_field :name, class: 'form-control', required: true, placeholder: raw(Spree.t(:name) + required_span_tag) %>
      <%= f.label :name, raw(Spree.t(:name) + required_span_tag) %>
    <% end %>

    <%= f.field_container :scopes, 'data-hook' => "oauth_application_scopes" do %>
      <%= f.text_field :scopes, class: 'form-control', placeholder: raw(Spree.t(:scopes) + required_span_tag) %>
      <%= f.label :scopes, raw(Spree.t(:scopes) + required_span_tag) %>
      <small class="form-text text-muted">
        Possible values:
        <ul>
          <li><strong>admin read</strong> - read only access</li>
          <li><strong>admin write</strong> - read and write access</li>
        </ul>
      </small>
    <% end %>

    <div data-hook="additional_oauth_application_fields"></div>
  </div>
</div>
