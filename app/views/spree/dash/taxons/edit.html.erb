<% content_for :page_title do %>
  <%= link_to I18n.t('spree.dash.taxonomies.categories'), spree.dash_taxonomies_url %> /
  <%= link_to @taxonomy.root.name, spree.edit_dash_taxonomy_url(@taxonomy) %>
  <% unless @taxon.root? %>
   / <%= @taxon.name %>
   <% end %>
<% end %>

<% content_for :page_actions do %>
  <%= external_page_preview_link(@taxon) %>
  <%= remote_form_submit_button(@object) %>
<% end %>

<%= form_with model: [:dash, @taxonomy, @taxon], builder: Spree::Dash::BootstrapBuilder, method: :put, url: spree.dash_taxonomy_taxon_path(@taxonomy.id, @taxon.id), data: {controller: "form-state"} do |f| %>
  <%= render 'form', f: f %>
<% end %>
