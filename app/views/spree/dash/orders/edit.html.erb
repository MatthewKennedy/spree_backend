<% content_for :page_actions do %>
  <% if @order.completed? %>
    <% if can?(:fire, @order) %>
      <%= event_links(@order, @order_events) %>
    <% end %>
  <% end %>

  <% if (can? :update, @order) && @order.some_digital? %>
    <%= link_to_with_icon I18n.t('spree.dash.digitals.reset_download_links'),
        reset_digitals_dash_order_url(@order),
        icon: 'hdd.svg' %>
  <% end %>
<% end %>

<% content_for :page_title do %>
  <%= page_header_back_button spree.dash_orders_path %>
  <%= @order.number %>
<% end %>

<div data-hook="dash_order_edit_header">
  <%= render 'spree/dash/shared/error_messages', target: @order %>
</div>

<div class="row">
  <div class="col-12 col-md-8">
    <%#= render 'add_line_item' if can?(:update, @order) %>
    <%= render 'spree/dash/orders/shipments/panel' if can?(:update, @order) %>
    <%= render 'invoice' %>
    <%= render 'spree/dash/orders/payments/panel' %>

  </div>
  <div class="col-12 col-md-4">
    <%= render 'currency' if can?(:update, @order) %>
    <%= render 'spree/dash/orders/customer/panel' if can?(:update, @order) %>
    <%= render 'summary' %>
  </div>
</div>

<% if @order.payments.exists? && @order.considered_risky? %>
  <%= render 'spree/dash/orders/risk_analysis', latest_payment: @order.payments.order("created_at DESC").first %>
<% end %>
