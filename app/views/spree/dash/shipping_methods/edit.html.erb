<% content_for :page_title do %>
  <%= link_to Spree.t(:shipping_methods), spree.dash_shipping_methods_url %> /
  <%= @shipping_method.name %>
<% end %>

<% content_for :page_actions do %>
  <%= remote_form_submit_button(@object) %>
<% end %>

<div data-hook="dash_shipping_method_edit_form_header">
  <%= render partial: 'spree/dash/shared/error_messages', locals: { target: @shipping_method } %>
</div>

<div data-hook="dash_shipping_method_edit_form">
  <%= form_with model: [:dash, @shipping_method], builder: Spree::Dash::BootstrapBuilder, data: { controller: 'form-state'} do |f| %>
    <%= render partial: 'form', locals: { f: f } %>
  <% end %>
</div>
