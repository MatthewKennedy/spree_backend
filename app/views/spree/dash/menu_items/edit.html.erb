<% content_for :page_title do %>
  <%= link_to I18n.t('spree.dash.navigation.all_menus'), spree.dash_menus_path %> /
  <%= link_to @menu.name, spree.edit_dash_menu_path(@menu) %> / <%= @menu_item.name %>
<% end %>

<%= render partial: 'spree/dash/shared/error_messages', locals: { target: @menu_item } %>

<%= form_with model: [:dash, @menu, @menu_item], builder: Spree::Dash::BootstrapBuilder do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <%= render partial: 'spree/dash/shared/edit_resource_links' %>
<% end %>
