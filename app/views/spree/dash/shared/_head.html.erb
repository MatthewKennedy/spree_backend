<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

<%= csrf_meta_tags %>

<title>
  <% if content_for? :title %>
    <%= yield :title %>
  <% else %>
    <%= "#{I18n.t('spree.dash.spree_dashistration')}: " %>
    <%= Spree.t(controller.controller_name, default: controller.controller_name.titleize) %>
  <% end %>
</title>

<%= stylesheet_link_tag 'spree/dash/all', media: :all %>

<%= render 'spree/dash/shared/paths' %>
<%= javascript_include_tag "spree_dash", data: { turbo_track: "reload" } %>
<%= render "spree/dash/shared/translations" %>

<script>
  <%== "SpreeDash.AUTH_TOKEN = #{form_authenticity_token.inspect}" %>
  <%== "SpreeDash.OAUTH_TOKEN = '#{dash_oauth_token}'" if defined?(dash_oauth_token) %>
</script>

<%= yield :head %>
