<ul class="nav nav-sidebar" id="sidebarDashboard">
  <%= tab I18n.t('spree.dash.tab.dashboard'), url: spree.dash_path, match_path: '/dashboard', icon: 'card-heading.svg' %>
</ul>

<% if can? :dash, Spree::Order %>
  <ul class="nav nav-sidebar" id="sidebarOrder">
    <%= main_menu_tree I18n.t('spree.dash.tab.orders'), icon: "inbox-fill.svg", sub_menu: "orders", url: "#sidebar-orders" %>
  </ul>
<% end %>

<% if can?(:dash, Spree::ReturnAuthorization) || can?(:dash, Spree::CustomerReturn) %>
  <ul class="nav nav-sidebar" id="sidebarReturn">
    <%= main_menu_tree I18n.t('spree.dash.tab.returns'), icon: "reply-fill.svg", sub_menu: "returns", url: "#sidebar-returns" %>
  </ul>
<% end %>

<% if can? :dash, Spree::Product %>
  <ul class="nav nav-sidebar" id="sidebarProduct">
    <%= main_menu_tree I18n.t('spree.dash.tab.catalog'), icon: "tags-fill.svg", sub_menu: "product", url: "#sidebar-product" %>
  </ul>
<% end %>

<% if can?(:dash, Spree::StockLocation) || can?(:dash, Spree::StockTransfer) %>
  <ul class="nav nav-sidebar" id="sidebarStock">
    <%= main_menu_tree I18n.t('spree.dash.tab.stock'), icon: "box-seam.svg", sub_menu: "stock", url: "#sidebar-stock" %>
  </ul>
<% end %>

<% if can? :dash, Spree::Dash::ReportsController %>
  <ul class="nav nav-sidebar" id="sidebarReport">
    <%= tab *Spree::Dash::Configuration::REPORT_TABS, icon: 'pie-chart-fill.svg' %>
  </ul>
<% end %>

<% if can? :dash, Spree::Promotion %>
  <ul class="nav nav-sidebar" id="sidebarPromotion">
    <%= main_menu_tree I18n.t('spree.dash.promotions.promotions'), icon: "percent.svg", sub_menu: "promotion", url: "#sidebar-promotions" %>
  </ul>
<% end %>

<% if defined?(Spree::Vendor) && can?(:manage, Spree::Vendor) && can?(:index, Spree::Vendor) %>
  <ul class="nav nav-sidebar" id="sidebarOrganizations">
    <%= main_menu_tree I18n.t('spree.dash.promotions.organizations'), icon: "building.svg", sub_menu: "organizations", url: "#sidebar-organizations" %>
  </ul>
<% end %>

<% if Spree.user_class && can?(:dash, Spree.user_class) %>
  <ul class="nav nav-sidebar" id="sidebarUser">
    <%= tab *Spree::Dash::Configuration::USER_TABS, url: spree.dash_users_path, icon: 'people-fill.svg' %>
  </ul>
<% end %>

<% if can? :dash, Spree::Menu %>
  <ul class="nav nav-sidebar" id="sidebarMenu">
    <%= main_menu_tree I18n.t('spree.dash.tab.content'), icon: "card-heading.svg", sub_menu: "content", url: "#sidebar-content" %>
  </ul>
<% end %>

