<% content_for :page_title do %>
  <%= link_to Spree.t(:promotion_categories), spree.dash_promotion_categories_url %> /
  <%= @promotion_category.name %>
<% end %>

<%= form_with model: @promotion_category, url: object_url, method: :put do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/dash/shared/edit_resource_links' %>
  </fieldset>
<% end %>
