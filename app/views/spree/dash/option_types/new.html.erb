<% content_for :page_title do %>
  <%= link_to Spree.t(:option_types), spree.dash_option_types_url %> / <%= Spree.t(:new_option_type) %>
<% end %>

<%= form_with model: [:dash, @option_type], builder: Spree::Dash::BootstrapBuilder do |f| %>
  <div class="card mb-3">
    <div class="card-body">
       <%= render partial: 'form', locals: { f: f } %>
    </div>
    <div class="card-footer text-center">
       <%= render partial: 'spree/dash/shared/new_resource_links' %>
    </div>
  </div>
<% end %>
